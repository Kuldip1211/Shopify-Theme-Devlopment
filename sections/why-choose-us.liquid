{% schema %}
{
  "name": "Why Choose Us",
  "settings": [
    { "type": "text", "id": "heading", "label": "Section Heading", "default": "Why Choose Us" },
    { "type": "text", "id": "Description" , "label": "Description","default" : "Discover the key reasons our customers trust and love us."}
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature item",
      "settings": [
        { "type": "text", "id": "why_choose_icon", "label": "Icon (emoji or text)", "default": "âš¡" },
        { "type": "image_picker", "id": "why_choose_image", "label": "Image" },
        { "type": "text", "id": "why_choose_title", "label": "Title", "default": "Feature Title" },
        { "type": "text", "id": "why_choose_description", "label": "Description", "default": "Feature description goes here." }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Why Choose Us",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="why-choose-us">
  <div class="why-container">
    <h2 class="title">{{ section.settings.heading }}</h2>
    <p class="description">{{ section.settings.Description }}</p>
    <div class="why-grid">
      {% for block in section.blocks %}
        <div class="why-card">
          {% if block.settings.why_choose_icon != blank %}
            <div class="icon">{{ block.settings.why_choose_icon }}</div>
          {% endif %}
          {% if block.settings.why_choose_image != blank %}
            <img src="{{ block.settings.why_choose_image | img_url: '300x' }}" alt="{{ block.settings.why_choose_title }}">
          {% endif %}
          <div class="card-title">{{ block.settings.why_choose_title }}</div>
          <p class="card-text">{{ block.settings.why_choose_description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

  .why-choose-us {
    background: #f9fafb;
    padding: 40px 20px;
    display: flex;
    justify-content: center;
    font-family: 'Poppins', sans-serif;
    color: #111827;
  }
  .why-container {
    max-width: 1100px;
    width: 100%;
  }
  .why-choose-us .title {
    font-size: 32px;
    font-weight: 700;
    text-align: center;
    margin-bottom: 12px;
  }
  .why-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 20px;
    margin-top: 40px;
  }
  .why-card {
    background: #ffffff;
    border-radius: 12px;
    padding: 24px;
    box-shadow: 0 4px 14px rgba(0,0,0,0.08);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    text-align: center;
  }
  .why-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 28px rgba(0,0,0,0.12);
  }
  .why-card .icon {
    font-size: 40px;
    color: #2563eb;
    margin-bottom: 16px;
  }
  .why-card img {
    max-width: 80px;
    margin: 0 auto 16px;
    display: block;
  }
  .why-card .card-title {
    font-weight: 600;
    font-size: 20px;
    margin-bottom: 10px;
  }
  .description{
    text-align:center
    }
  .why-card .card-text {
    color: #6b7280;
    font-size: 15px;
    line-height: 1.5;
  }
  @media (max-width: 600px) {
    .why-choose-us .title { font-size: 26px; }
    .why-card .card-title { font-size: 18px; }
  }
</style>
