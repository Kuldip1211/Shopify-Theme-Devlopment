{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_bg",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "hero_heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "hero_subheading",
      "label": "Subheading",
      "default": "Discover amazing products crafted just for you."
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "hero_button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 40
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Banner"
    }
  ]
}
{% endschema %}

<section class="hero-section">
  <div class="hero-bg" style="background-image: url({{ section.settings.hero_bg | image_url: width: 2000 }});">
    <div class="hero-overlay" style="background-color: rgba(0,0,0,{{ section.settings.overlay_opacity | divided_by: 100.0 }});"></div>
    <div class="hero-content hero-align-{{ section.settings.content_alignment }}">
      <h1 class="hero-heading">{{ section.settings.hero_heading }}</h1>
      <p class="hero-subheading">{{ section.settings.hero_subheading }}</p>
      {% if section.settings.hero_button_text != blank %}
        <a href="{{ section.settings.hero_button_link }}" class="hero-btn">
          {{ section.settings.hero_button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
.hero-section {
  position: relative;
  width: 100%;
  height: 50vh;
  display: flex;
  align-items: center;
  justify-content: center;
  align-content:center;
  margin-bottom: 20px;
}

.hero-bg {
  position: relative;
  width: 70%;
  height: 100%;
  background-size: cover;
  background-position: center;
  display:flex;
  justify-content:center;
  align-item:center;
}

.hero-overlay {
  position: absolute;
  inset: 0;
}

.hero-content {
  position: relative;
  z-index: 2;
  max-width: 800px;
  padding: 2rem;
  color: #fff;
  text-align: center;
  animation: fadeInUp 1.2s ease forwards;
}

.hero-align-left { text-align: left; margin-left: 5%; }
.hero-align-center { text-align: center; margin: auto; }
.hero-align-right { text-align: right; margin-right: 5%; }

.hero-heading {
  font-size: clamp(2rem, 5vw, 3.5rem);
  font-weight: 700;
  margin-bottom: 1rem;
}

.hero-subheading {
  font-size: clamp(1rem, 2.5vw, 1.5rem);
  margin-bottom: 2rem;
  color: #f1f1f1;
}

.hero-btn {
  background: #ff6a3d;
  padding: 0.8rem 2rem;
  font-size: 1.1rem;
  font-weight: 600;
  border-radius: 50px;
  color: #fff;
  text-decoration: none;
  transition: all 0.3s ease;
}

.hero-btn:hover {
  background: #ff3d1f;
  transform: translateY(-3px);
  box-shadow: 0px 4px 15px rgba(0,0,0,0.3);
}

/* Animation */
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Responsive */
@media(max-width: 768px) {
  .hero-section { height: 50vh; }
  .hero-bg { width: 100%; }
  .hero-heading { font-size: 2rem; }
  .hero-subheading { font-size: 1rem; }
  .hero-btn { font-size: 1rem; padding: 0.7rem 1.5rem; }
}
</style>
