<div class="contact-section">
  <div class="contact-container">

    <!-- Left: Contact Info + Map -->
    <div class="contact-info">
      <h2 class="contact-title">{{ section.settings.heading }}</h2>
      <p class="contact-subtitle">{{ section.settings.subheading }}</p>

      <ul class="contact-details">
        <li><strong>üìç Address:</strong> {{ section.settings.address }}</li>
        <li><strong>üìû Phone:</strong> {{ section.settings.phone }}</li>
        <li><strong>‚úâÔ∏è Email:</strong> <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a></li>
      </ul>

      <div class="contact-map">
        {{ section.settings.map_embed }}
      </div>
    </div>

    <!-- Right: Contact Form -->
    <div class="contact-form-wrapper">
      {% form 'contact' %}
        {% if form.posted_successfully? %}
          <p class="form-success">‚úÖ Thank you for contacting us! We‚Äôll reply soon.</p>
        {% endif %}
        {% if form.errors %}
          <ul class="form-errors">
            {% for field in form.errors %}
              <li>{{ field | capitalize }} - {{ form.errors.messages[field] }}</li>
            {% endfor %}
          </ul>
        {% endif %}

        <div class="form-group">
          <input type="text" name="contact[name]" placeholder="Your Name" required>
        </div>
        <div class="form-group">
          <input type="email" name="contact[email]" placeholder="Your Email" required>
        </div>
        <div class="form-group">
          <input type="tel" name="contact[phone]" placeholder="Your Phone (optional)">
        </div>
        <div class="form-group">
          <textarea name="contact[body]" rows="5" placeholder="Your Message" required></textarea>
        </div>
        <button type="submit" class="contact-btn">{{ section.settings.button_text }}</button>
      {% endform %}
    </div>

  </div>
</div>

<style>
.contact-section {
  padding: 60px 20px;
  font-family: 'Poppins', sans-serif;
  background: #f9fafb;
}

.contact-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 50px;
  max-width: 1200px;
  margin: 0 auto;
  background: #fff;
  padding: 40px;
  border-radius: 14px;
  box-shadow: 0 8px 24px rgba(0,0,0,0.08);
  align-items: start;
}

/* Left Info */
.contact-info h2 {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 10px;
}
.contact-subtitle {
  font-size: 16px;
  color: #6b7280;
  margin-bottom: 20px;
}
.contact-details {
  list-style: none;
  padding: 0;
  margin: 0 0 20px;
}
.contact-details li {
  margin-bottom: 10px;
  font-size: 15px;
  color: #374151;
}
.contact-details a {
  color: #2563eb;
  text-decoration: none;
}
.contact-details a:hover {
  text-decoration: underline;
}
.contact-map iframe {
  width: 100%;
  height: 250px;
  border: none;
  border-radius: 10px;
}

/* Right Form */
.contact-form-wrapper {
  display: flex;
  flex-direction: column;
  gap: 16px;
}
.form-group input,
.form-group textarea {
  width: 100%;
  padding: 14px;
  border: 1px solid #ddd;
  margin-top: 10px;
  border-radius: 8px;
  font-size: 15px;
  outline: none;
  transition: border 0.2s;
}
.form-group input:focus,
.form-group textarea:focus {
  border-color: #2563eb;
}
.contact-btn {
  padding: 14px 24px;
  background: #2563eb;
  color: #fff;
  font-weight: 600;
  border: none;
  border-radius: 8px;
  margin-top: 20px;
  cursor: pointer;
  transition: background 0.2s;
}
.contact-btn:hover {
  background: #1d4ed8;
}

/* Success & Errors */
.form-success { color: green; font-weight: 500; }
.form-errors { color: red; font-size: 14px; list-style: none; padding: 0; }

/* Responsive */
@media (max-width: 900px) {
  .contact-container {
    grid-template-columns: 1fr;
    padding: 20px;
  }
  .contact-info h2 { font-size: 26px; }
  .contact-map iframe { height: 200px; }
}
</style>

{% schema %}
{
  "name": "Contact Page",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Get in Touch" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "We‚Äôd love to hear from you. Fill out the form below." },
    { "type": "text", "id": "address", "label": "Store Address", "default": "123 ShivFarm Street, Ahmedabad, India" },
    { "type": "text", "id": "phone", "label": "Phone Number", "default": "+91 9876543210" },
    { "type": "text", "id": "email", "label": "Email", "default": "support@shivfarm.com" },
    { "type": "textarea", "id": "map_embed", "label": "Google Map Embed", "default": "<iframe src='https://www.google.com/maps/embed?...' allowfullscreen loading='lazy'></iframe>" },
    { "type": "text", "id": "button_text", "label": "Button Text", "default": "Send Message" }
  ],
  "presets": [
    { "name": "Contact Page" }
  ]
}
{% endschema %}
