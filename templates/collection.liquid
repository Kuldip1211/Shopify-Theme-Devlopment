<!-- templates/collection.liquid -->
<div class="collection-container">
  <h1 class="collection-title">{{ collection.title }}</h1>
  {% if collection.description != blank %}
    <p class="collection-description">{{ collection.description }}</p>
  {% endif %}

  {% if collection.products.size > 0 %}
    <div class="product-grid">
      {% for product in collection.products %}
        <div class="product-card">
          <div class="product-image-wrapper">
            <a href="{{ product.url }}" class="product-img-link">
              <img 
                src="{{ product.featured_image | img_url: '600x' }}" 
                alt="{{ product.title }}" 
                class="product-img">
            </a>
            <form method="post" action="/cart/add" class="add-to-cart-form">
              <input type="hidden" name="id" value="{{ product.variants.first.id }}">
              <button type="submit" class="add-to-cart-btn">ðŸ›’ Add to Cart</button>
            </form>
          </div>
          <div class="product-info">
            <h2 class="product-title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h2>
            <p class="product-price">
              {{ product.price | money }}
              {% if product.compare_at_price > product.price %}
                <span class="compare-price">{{ product.compare_at_price | money }}</span>
              {% endif %}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p class="empty-message">No products found in this collection.</p>
  {% endif %}
</div>

<style>
  /* Container */
  .collection-container {
    max-width: 1440px;
    margin: 50px auto;
    padding: 0 24px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .collection-title {
    text-align: center;
    font-size: 40px;
    font-weight: 700;
    margin-bottom: 10px;
    color: #111827;
  }

  .collection-description {
    text-align: center;
    color: #6b7280;
    font-size: 18px;
    margin-bottom: 50px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Product Grid */
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 30px;
  }

  .product-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0px 6px 20px rgba(0,0,0,0.08);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0px 10px 30px rgba(0,0,0,0.15);
  }

  /* Image + Overlay */
  .product-image-wrapper {
    position: relative;
    overflow: hidden;
  }

  .product-img {
    width: 100%;
    height: 320px;
    object-fit: cover;
    transition: transform 0.4s ease;
    display: block;
  }

  .product-card:hover .product-img {
    transform: scale(1.08);
  }

  .add-to-cart-form {
    position: absolute;
    bottom: -60px;
    left: 0;
    right: 0;
    text-align: center;
    transition: bottom 0.3s ease;
  }

  .product-card:hover .add-to-cart-form {
    bottom: 15px;
  }

  .add-to-cart-btn {
    background: #2563eb;
    color: #fff;
    padding: 12px 22px;
    border: none;
    border-radius: 8px;
    font-size: 15px;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s, transform 0.2s;
  }

  .add-to-cart-btn:hover {
    background: #1d4ed8;
    transform: translateY(-2px);
  }

  /* Product Info */
  .product-info {
    padding: 20px;
    text-align: center;
  }

  .product-title {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .product-title a {
    text-decoration: none;
    color: #111827;
    transition: color 0.3s;
  }

  .product-title a:hover {
    color: #2563eb;
  }

  .product-price {
    font-size: 18px;
    font-weight: bold;
    color: #16a34a;
    margin-bottom: 10px;
  }

  .compare-price {
    text-decoration: line-through;
    color: #9ca3af;
    font-size: 14px;
    margin-left: 8px;
  }

  /* Empty message */
  .empty-message {
    text-align: center;
    font-size: 18px;
    color: #6b7280;
    margin: 60px 0;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .product-img {
      height: 260px;
    }
  }

  @media (max-width: 768px) {
    .collection-title {
      font-size: 30px;
    }
    .collection-description {
      font-size: 16px;
    }
    .product-img {
      height: 220px;
    }
  }

  @media (max-width: 480px) {
    .product-grid {
      gap: 20px;
    }
    .product-title {
      font-size: 18px;
    }
    .product-price {
      font-size: 16px;
    }
  }
</style>
